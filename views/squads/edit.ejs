<%- include('../partials/header.ejs') %>

<section class="container-fluid content">
    <div class="row justify-content-around">
        <div class="col-lg col-md">

        </div>
        <div class="col-lg-6 col-md-6">
            <div class="d-flex flex-column">
                <div class="card input-card">
                    <h3 class="card-header input-card-title">Edit <%= squad.game %> Squad</h3>
                    <div class="card-body">
                        <form action="/squads/<%= squad._id%>?_method=PUT" method="POST">
                            <h5 class="input-card-subtitle">Name</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="squad[name]" class="form-control" value="<%= squad.name %>">
                            </div>
                            <h5 class="input-card-subtitle">Game</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="squad[game]" class="form-control" value="<%= squad.name %>">
                            </div>                       
                            <h5 class="input-card-subtitle">Players (Handles separated by comma and space, i.e. "GaRpY, HELL, ottr")</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="squad[players]" class="form-control" value="<%= squad.players %>">
                            </div>                            
                            <h5 class="input-card-subtitle">Description</h5>
                            <div class="input-group mb-3">
                                <textarea class="form-control" rows=10 name="squad[description]" required><%= squad.description %></textarea>
                            </div>
                            <h5 class="input-card-subtitle">Thumbnail Photograph</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="squad[thumbnail]" class="form-control" value="<%= squad.thumbnail %>">
                            </div>
                            <h5 class="input-card-subtitle">Full-Size Photograph</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="squad[photograph]" class="form-control" value="<%= squad.photograph %>">
                            </div>
                            <h5 class="input-card-subtitle">Year of Formation</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="squad[startYear]" class="form-control" value="<%= squad.startYear %>">
                            </div>   

                            <input class="btn input-card-button" type="submit" value="Submit Changes">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg col-md"></div>
    </div>
</section>

<%- include('../partials/footer.ejs') %>