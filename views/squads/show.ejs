<%- include('../partials/header.ejs') %>

<section class="content">

    <div class="d-flex justify-content-center align-items-center show-image-container">

    </div>

    <div class="row mx-0">

        <div class="col-lg col-md">
        </div>

        <div class="col-lg-10 col-md-10">
            <div class="d-flex flex-column align-items-center">
                <img src="<%= squad.game %>">
                <%= squad.description %>
                <img src="<%= squad.photograph %>">
                <%= squad.startYear %>

                <% for(player of squad.players) { %>
                    <img src="<%= player.thumbnail %>">
                    <%= player.name %>
                    <%= player.age %>
                    <%= player.handle %>
                    <%= player.games %>
                    <%= player.bio %>
                <% } %>

                game:           String,
                players:        [],
                description:    String,
                thumbnail:      String,
                photograph:     String,
                startYear:      String,
            </div>
        </div>

        <div class="col-lg col-md">
        </div>

    </div>

</section>

<%- include('../partials/footer.ejs') %>