<% include ../partials/header.ejs %>

<section class="container-fluid content">
    <div class="row justify-content-around">
        <div class="col-lg col-md">
        </div>
        <div class="col-lg-6 col-md-6"> 
            <div class="d-flex flex-column">
                <div class="card input-card">
                    <h3 class="card-header input-card-title">New Player</h3>
                    <div class="card-body">
                        <form action="/images" method="POST">
                            <h5 class="input-card-subtitle">Author</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="author" class="form-control" placeholder="" value="<%= currentUser.username %>" readonly="readonly">
                            </div>
                            <h5 class="input-card-subtitle">Title</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="title" class="form-control" placeholder="">
                            </div>
                            <h5 class="input-card-subtitle">Thumbnail Image</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="thumbnail" class="form-control" placeholder="">
                            </div>
                            <h5 class="input-card-subtitle">Images (separate with a space)</h5>
                            <div class="input-group mb-3">
                                <input type="text" name="images" class="form-control" placeholder="">
                            </div>
                            <h5 class="input-card-subtitle">Body</h5>
                            <div class="input-group mb-3">
                                <textarea rows="10" name="body" class="form-control" required></textarea>
                            </div>
                            <h5 class="input-card-subtitle">Year</h5>

                            <input class="btn input-card-button" type="submit" value="Submit New Post">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg col-md"></div>
    </div>
</section>

<% include ../partials/footer.ejs %>