<%- include('../partials/header.ejs') %>

<section class="content">

    <div class="d-flex justify-content-center align-items-center show-image-container">

    </div>

    <div class="row mx-0">

        <div class="col-lg col-md">
        </div>

        <div class="col-lg-10 col-md-10">
            <div class="d-flex flex-column align-items-center">
                <p><%= player.thumbnail %></p>
                <p><%= player.photograph %></p>
                <p><%= player.name %></p>
                <p><%= player.age %></p>
                <p><%= player.handle %></p>
                <ul>
                    <% for(squad of player.squads) { %>
                        <li><%= squad %></li>
                    <% } %>
                </ul>
                <p><%= player.bio %></p>
                <p><%= player.joinDate %></p>
            </div>
        </div>

        <div class="col-lg col-md">
        </div>

    </div>

</section>

<%- include('../partials/footer.ejs') %>