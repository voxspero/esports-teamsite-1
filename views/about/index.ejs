<%- include('../partials/header.ejs') %>
<%- include('../partials/section-head.ejs') %>

<% for(staffer of staffers) { %>
    <div class="section__row__content__card">
        <a class="section__row__content__card__image--about" href="/staffers/<%= staffer._id %>" style="background-image: url('<%= staffer.thumbnail %>');"></a>
        <h5 class="section__row__content__card__header--about-name"><%= staffer.name %></h5>
        <p class="section__row__content__card__header--about-role"><%= staffer.role %></p>
        <div class="section__row__content__card__body--about">
            <% if(staffer.bio.length > 175) { %>    
                <p class="section__row__content__card__body--about-text"><%= staffer.bio.substring(0, 175) %><span class="ellipsis">  .  .  .  </span></p>
            <% } else { %>
                <p class="section__row__content__card__body--about-text"><%= staffer.bio %></p>
            <% } %>
            <!-- <a href="/staffers/<%= staffer._id %>" class="section__row__content__card__button">View</a> -->
        </div>
    </div>
<% } %>

