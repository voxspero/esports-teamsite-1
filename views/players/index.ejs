<%- include('../partials/header.ejs') %>
<%- include('../partials/section-head.ejs') %>

<% for(player of players) { %>
    <div class="section__row__content__card">
        <a class="section__row__content__card__image--player" href="/players/<%= player._id %>" style="background-image: url('<%= player.thumbnail %>');"></a>
        <h5 class="section__row__content__card__header--player-name"><%= player.name %></h5>
        <p class="section__row__content__card__header--player-handle"><%= player.handle %></p>
        <div class="section__row__content__card__body--player">
            <% if(player.bio.length > 175) { %>    
                <p class="section__row__content__card__body--player-text"><%= player.bio.substring(0, 175) %><span class="ellipsis">  .  .  .  </span></p>
            <% } else { %>
                <p class="section__row__content__card__body--player-text"><%= player.bio %></p>
            <% } %>
            <a href="/players/<%= player._id %>" class="section__row__content__card__button">View</a>
        </div>
    </div>
<% } %>

